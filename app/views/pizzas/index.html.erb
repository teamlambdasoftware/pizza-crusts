<h1>Listing pizzas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pizzas.each do |pizza| %>
  <tr>
    <td><%= pizza.name %></td>
    <td><%= pizza.description %></td>
    <td><%= pizza.price %></td>
    <td>
      <% if pizza.delivered? %>
          <b>This pizza has been delivered!</b>
      <% else %>
          <i>This pizza hasn't been delivered yet.</i>
      <% end %>
    </td>
    <td><%= link_to 'Show', pizza %></td>
    <td><%= link_to 'Edit', edit_pizza_path(pizza) %></td>
    <td><%= link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Deliver', deliver_pizza_path(pizza) %></td>
  </tr>
<% end %>
</table>

